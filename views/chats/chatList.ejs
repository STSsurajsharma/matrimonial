<head>
    <link rel="stylesheet" href="./../../css/chatList.css">

    <style>
        .profile-section {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
        }
        .chat-list {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
        }
        .benefits-section {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        }
        .benefits-section .btn {
            background-color: #dc3545;
            color: #fff;
        }
        .chat-item {
            display: flex;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #f1f1f1;
        }
        .chat-item:last-child {
            border-bottom: none;
        }
        .chat-item img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 15px;
        }
        .chat-item .details {
            flex-grow: 1;
        }
        .chat-item .details .name {
            font-weight: bold;
        }
        .chat-item .details .meta {
            font-size: 0.9rem;
            color: #6c757d;
        }
    </style>
</head>

