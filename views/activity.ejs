<head>
    <link rel="stylesheet" href="../css/activity.css">
    <!--  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- TAilwind css cdn -->
    <script src="https://cdn.tailwindcss.com"></script>


</head>

<body>
    <%- include('./layouts/header', {activePage: 'profile_activity' }) %>

        <div class="container h-[60px]">
            <h2 class="text-center mt-5 d-none">Dashboard</h2>
        </div>


        <div class="row g-0">
            <!-- left aside -->
            <div class="mt-5 col col-12 col-md-4 parent-card">
                <div class="profile-card mx-auto shadow">
                    <button class="btn btn-sm btn-light expand-btn" onclick="toggleDetails()">+</button>

                    <img src="<%= currentUser.profileImage %>" alt="Profile Picture">

                    <div class="info-top ml-4 mt-3">
                        <h4 class="fs-6">
                            <%= currentUser.name %> | BDS2025
                        </h4>
                        <!-- <p class="btn btn-danger">Upgrade Now !</p>  -->
                    </div>

                    <div class="membership-info">
                        <hr>
                        <h5 class="text-gray-900 fw-1">Memberhsip : Free ?</h5>
                        <p class="text-gray-900">Loosing many opportunities, Become a Paid member now</p>
                        <div class="btn btn-success">Get MemberShip Now !</div>
                    </div>
                    <!-- Details for the profile -->
                    <div class="details align-items-start">
                        <hr>
                        <a href="/profile">
                            <p class="text-gray-900"><i class="fa-solid fa-pen-to-square mr-3 text-muted"></i> Edit
                                Profile</p>
                        </a>
                        <a href="/partner-preference">
                            <p class="text-gray-900"><i class="fa-solid fa-pen-to-square mr-3 text-muted"></i> Edit
                                Preference</p>
                        </a> <a href="account-setting">
                            <p class="text-gray-900"><i class="fa-solid fa-gear mr-3 text-muted"></i> Account setting
                            </p>
                               <!-- activity -->
                        <a href="">
                            <p class="text-gray-900"><i class="fa-solid fa-chart-line mr-3 text-muted"></i> Profile Activity</p>
                        </a>
                        </a> <a href="">
                            <p class="text-gray-900"><i class="fa-solid fa-circle-info mr-3 text-muted"></i> Help and
                                Supports</p>
                        </a>
                        <!-- <div>
                        <a href="#" class="text-light me-3"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-instagram"></i></a>
                    </div> -->
                    </div>
                </div>
            </div>

            <!-- Right Main Part -->
            <div class="main col col-12 col-md-7 mt-5 rounded bg-light border border-light">
                <div class="profile-activity-container">
                    <!--  -->
                    <h1 class="mb-4">Profile Activity</h1>
                    <!-- Send interest -->
                    <div class="activity-grid">
                        <a href="/profile-activity/send-interest">
                            <div class="activity-card send-interest">
                                <i class="fas fa-paper-plane"></i>
                                <h2>Send Interest</h2>
                                <p>Total: 20</p>
                            </div>
                        </a>
                        <!-- received interest -->
                        <a href="/profile-activity/receive-interest">
                            <div class="activity-card received-interest">
                                <i class="fas fa-envelope-open-text"></i>
                                <h2>Received Interest</h2>
                                <p>Total: 15</p>
                            </div>
                        </a>
                        <!-- pending interest -->
                        <a href="/profile-activity/pending-interest">
                            <div class="activity-card pending-interest">
                                <i class="fas fa-hourglass-half"></i>
                                <h2>Pending Interest</h2>
                                <p>Total: 5</p>
                            </div>
                        </a>
                        <!-- Rejected interest -->
                        <a href="/profile-activity/reject-interest">
                            <div class="activity-card reject-interest">
                                <i class="fas fa-times-circle"></i>
                                <h2>Rejected Interest</h2>
                                <p>Total: 2</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
        <script>
            function toggleDetails() {
                const details = document.querySelector('.details');
                const btn = document.querySelector('.expand-btn');
                const card = document.querySelector('.profile-card');

                if (details.classList.contains('expanded')) {
                    details.classList.remove('expanded');
                    btn.textContent = '+';
                    card.style.boxShadow = 'none';
                } else {
                    details.classList.add('expanded');
                    btn.textContent = '-';
                    card.style.boxShadow = '0 8px 16px rgba(0, 0, 0, 0.2)';
                }
            }
        </script>
</body>